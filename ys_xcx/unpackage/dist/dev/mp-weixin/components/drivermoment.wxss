.drivermoment {
  width: 100%;
  height: 170rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2rpx solid #c8c7cc;
}
.drivermoment .drivermoment-left {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  overflow: hidden;
}
.drivermoment .drivermoment-center {
  width: 50%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.drivermoment .drivermoment-center .drivermoment-center-top {
  width: 100%;
  height: 40%;
}
.drivermoment .drivermoment-center .drivermoment-center-top text {
  font-size: 28rpx;
  font-weight: bold;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.drivermoment .drivermoment-center .drivermoment-center-bt {
  width: 100%;
  height: 40%;
}
.drivermoment .drivermoment-center .drivermoment-center-bt text {
  font-size: 24rpx;
  opacity: .6;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  justify-items: center;
}
.drivermoment .drivermoment-right {
  width: 15%;
  height: 80%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

