.tixian {
  width: 100vw;
  height: 260rpx;
  border-top: 1rpx solid #c8c7cc;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.tixian:last-child {
  border-bottom: 1rpx solid #c8c7cc;
}
.tixian .tixian-left {
  width: 60%;
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tixian .tixian-left .tixian-left-1 {
  width: 90%;
  height: 25%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tixian .tixian-left .tixian-left-1 text {
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.tixian .tixian-left .tixian-left-2 {
  width: 90%;
  height: 25%;
}
.tixian .tixian-left .tixian-left-2 text {
  font-size: 24rpx;
  font-family: Arial, Helvetica, sans-serif;
  color: green;
}
.tixian .tixian-left .tixian-left-3 {
